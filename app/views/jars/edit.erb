<h1>Edit This Jar</h1>

<form action="/jars/<%= @jar.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="jar[name]">Jar Name: </label>
  <input type="text" id="jar[name]" name="jar[name]" value="<%= @jar.name %>">

  <label for="jar[description]">Jar Description: </label>
  <textarea id="jar[description]" name="jar[description]"><%= @jar.description %></textarea>

  <input type="submit" value="Save Jar">
</form>

<ul>
<% @jar.movies.each do |movie| %>
  <li>
    <h4><%= movie.title %></h4>
    <a href="/movies/<%= movie.id %>/edit">Edit Movie</a>
    <form action="/movies/<%= movie.id %>" method="POST">
      <input type="hidden" id="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Movie">
    </form>
  </li>
<% end %>
</ul>